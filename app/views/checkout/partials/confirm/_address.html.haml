.col-sm-3
  %h3.general-subtitle= "#{type.capitalize} Address"
  %p.general-address
    = "#{address.first_name} #{address.last_name}"
    %span.general-edit
      = link_to wizard_path(:address) do
        = "edit"
    %br
    = address.address
    %br
    = address.city
    = address.zip
    %br
    = address.country_name
    %br
    = "Phone #{address.phone_number}"