%main.container
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step.active
      %span.step-number 1
      %span.step-text.hidden-xs Address
    %li.step-divider
    %li.step
      %span.step-number 2
      %span.step-text.hidden-xs Delivery
    %li.step-divider
    %li.step
      %span.step-number 3
      %span.step-text.hidden-xs Payment
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs Confirm
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  %form.res-mb-100
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
  = simple_form_for @checkout, as: :address, url: wizard_path, validate: true, method: :patch do |f|
    .row
      .col-md-5.mb-40
        = f.simple_fields_for :billing, @checkout.address_billing do |form|
          = render partial: "checkout/partials/address_form", locals: {f: form}
      #billing-form
        .col-md-5.col-md-offset-1.mb-60
          = f.simple_fields_for :shipping, @checkout.address_shipping do |form|
            = render partial: "checkout/partials/address_form", locals: {f: form}
          .form-group.checkbox
            %label.checkbox-label
              = check_box_tag :use_billing, true, false, id: 'use_billing', class: 'checkbox-input', hidden: true
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text
                Use Billing
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16= price_euro(@final_sum ||= subtotal_price)
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16= price_euro(@final_sum ||= subtotal_price)
      = f.button :submit, "Save and Continue", class: 'btn center-block mb-20'