%main.container
  = render partial: "checkout/partials/header"
  %h3.general-subtitle Credit Card
  = simple_form_for @checkout.card, url: wizard_path, method: :put, validate: true, html: {class: "max-600 mb-80"} do |f|
    .form-group
      = f.label :number, "Card Number", class: 'control-label input-label'
      = f.text_field :number, class: 'form-control', placeholder: "Card Number", required: true
    .row
      .col-sm-6
        .form-group
          = f.label :card_holder, "Name on Card", class: 'control-label input-label'
          = f.text_field :card_holder, class: 'form-control', placeholder: "Name on Card", required: true
      .col-sm-3
        .form-group
          = f.label :valid_thru, "MM / YY", class: 'control-label input-label'
          = f.text_field :valid_thru, class: 'form-control', placeholder: "MM / YY", required: true
      .col-sm-3
        .form-group.relative
          = f.label :cvv, "CVV", class: 'control-label input-label'
          = f.text_field :cvv, class: 'form-control', placeholder: "CVV", required: true
          %i.fa.fa-question-circle.general-form-help{ 'data-toggle': 'tooltip', 'data-placement': :top, title: "Enter your CVV code here" }
    #payment_centred
      .general-text-align
        %p.in-gold-500.font-18 Order Summary
        %table.general-summary-table
          %tr
            %td
              %p.font-16 Subtotal:
            %td
              %p.font-16= price_euro(item_total_price)
          %tr
            %td
              %p.font-16 Delivery:
            %td
              %p.font-16= price_euro(current_order.delivery.price)
          %tr
            %td
              %strong.font-18 Order Total:
            %td
              %strong.font-18= price_euro(item_total_price + current_order.delivery.price)
      #payment_button
        .text-center
          = f.button :submit, "Save and Continue", class: 'btn btn-default mb-20'