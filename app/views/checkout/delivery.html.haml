%main.container
  = render partial: "checkout/partials/header"
  %h3.general-subtitle Shipping method
  = simple_form_for @checkout.order, url: wizard_path, method: :put do |f|
    .hidden-xs.mb-res-50
      %table.table.table-hover
        %thead
          %tr
            %th.col-method
              %span.in-grey-600.ml-40 Method
            %th
              %span.in-grey-600 Days
            %th
              %span.in-grey-600 Price
        %tbody
          = f.collection_radio_buttons :delivery_id, @checkout.deliveries, :id, :name do |delivery|
            %tr
              %td
                .form-group.radio.mt-0.mb-0
                  = delivery.label(class: 'radio_label') do
                    = delivery.radio_button(class: 'radio-input', hidden: 'true')
                    %span.radio-icon
                    %span.radio-text
                      = delivery.object.name
              %td
                %span
                  = delivery.object.shipping_time
              %td
                %span.font-16.in-gold-500
                  = price_euro(delivery.object.price)
      #payment_centred
        .general-text-align
          %p.in-gold-500.font-18 Order Summary
          %table.general-summary-table
            %tr
              %td
                %p.font-16 Subtotal:
              %td
                %p.font-16= price_euro(item_total_price)
            %tr
              %td
                %p.font-16 Delivery:
              %td
                %p.font-16= price_euro(@checkout.order&.delivery&.price || 0)
            %tr
              %td
                %strong.font-18 Order Total:
              %td
                %strong.font-18= price_euro(item_total_price + (@checkout.order&.delivery&.price || 0))
        .text-center
          = f.button :submit, 'Save and Continue', class: 'btn btn-default mb-20'