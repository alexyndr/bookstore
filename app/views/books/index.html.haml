%main.container
  %h1.general-title-margin Ð¡atalog
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          = @soring_type
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        %ul.dropdown-menu
          %li
            = link_to 'Newest first', params: {sort: 'created_at', direction: 'desc', soring_type: 'Newest first',category_id: @current_category.id}
          %li
            = link_to 'Title: A - Z', params: {sort: 'title', direction: 'asc', soring_type: 'Title: A - Z',category_id: @current_category.id}
          %li
            = link_to 'Title: Z - A', params: {sort: 'title', direction: 'desc', soring_type: 'Title: Z - A',category_id: @current_category.id}
          %li
            = link_to 'Price: Hight to low', params: {sort: 'price', direction: 'desc', soring_type: 'Price: Hight to low',category_id: @current_category.id}
          %li
            = link_to 'Price: Low to Hight', params: {sort: 'price', direction: 'asc', soring_type: 'Price: Low to Hight',category_id: @current_category.id}
          %li
            %a{href: "#"} Popular
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        = link_to books_path(sort_by: params[:sort_by]), class: "filter-link #{'active' unless @current_category.id}" do
          All
          %span.badge.general-badge= Book.count
      - @categories.each do |category|
        %li.mr-35
          = link_to books_path(category_id: "#{category.id}", sort_by: params[:sort_by]), class: "filter-link #{'active' if @current_category.id == category.id}" do
            = category.title
            %span.badge.general-badge= category.books.count
  .mb-120
    .row
      - @books.each do |book|
        - @one = book
        = render partial: 'books/book'
    .text-center
      = link_to_next_page @books, 'View More', remote: true, id: 'view_more', class: "btn btn-primary"