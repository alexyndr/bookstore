- @books.each do |book|
  #books
  .col-xs-6.col-sm-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        = image_tag book.covers.first.variant(resize: "180x180").processed, class: "img-shadow general-thumbnail-img"
        -# %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
        .thumb-hover
          .general-thumb-link-wrap
            %a.thumb-hover-link{href: "/books/#{book.id}"}
              %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
            %a.thumb-hover-link{href: "#"}
              %i.fa.fa-shopping-cart.thumb-icon
    .general-thumb-info
      %p.title= book.title
      %p.font-16.in-gold-500= price_euro(book.price)
      %span.divider-sm
      %p.lead.small= book.description[0..60] + "..."
      -# %p.lead.small= book.description.truncate_words(7)