-# %form.general-form-md
-#   .form-group.mb-35
-#     %label.control-label.input-label{for: "email"} Enter Email
-#     %input#email.form-control{name:"email", type: "email", placeholder: "Enter your email"}
-#   .general-text-align
-#     %button.btn.btn-default.mb-35 Save

= form_for(@user, url: { action: "update_email" }, html: {class: 'general-form-md email' }) do |f|
  .form-group.mb-30
    = f.label :email, class: "control-label input-label"
    = f.email_field :email, class: "form-control"
  .form-group.mb-30
    = f.submit 'Save', class: 'btn btn-default mb-10'