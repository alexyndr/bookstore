.general-settings-btn
  = button_to t('addresses.please_remove_account'), registration_path(current_user), id: 'destroy_confirmation_button', disabled: true, class: 'button btn-default mb-20', method: :delete
.form-group.checkbox.general-settings-checkbox
  %label.checkbox-label
    = check_box_tag 'destroy_confirmation', true, false, id: 'destroy_confirmation', class: 'checkbox-input', hidden: true
    %span.checkbox-icon
      %i 
    %span.checkbox-text 
      =t('addresses.i_understand')