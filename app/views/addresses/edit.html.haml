%main.container
  %h1.general-title-margin=t('addresses.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "/settings/addresses"}=t('addresses.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "/settings"}=t('addresses.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      %div
        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0=t('addresses.billing_address')
            .col-md-5.col-md-offset-1
              %h3.general-subtitle.mt-0=t('addresses.shipping_address')
        .row
          .col-md-5.mb-40
            #billing
              = render 'billing'
          .col-md-5.col-md-offset-1.mb-25
            #shipping
              = render 'shipping'
            
            
