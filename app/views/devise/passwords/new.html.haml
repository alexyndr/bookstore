%main.container.general-main-wrap
  .text-center
    %h1.mb-30=t('forgot_pass')
    %p.general-password-text=t('pass_text')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "general-form" }) do |f|
    = devise_error_messages!
    .mb-25
      = f.email_field :email, autofocus: true, placeholder: t('enter_email'), autocomplete: "email", class: "form-control"
    .text-center
      = f.submit t('instructions'), class: "btn btn-default mb-20"
    .text-center
      %a.in-gold-500.mb-20{href: "/users/sign_in" }=t('cancel')