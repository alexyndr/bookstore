%body
  %header.navbar.navbar-default
    .container
      .navbar-header
        %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
          %span.sr-only
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand Bookstore
        %a.shop-link.pull-right.visible-xs{href: "#"}
          %span.shop-icon
            %span.shop-quantity 3
      %a.shop-link.pull-right.hidden-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
      #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
        .visible-xs
          %button.close{type: "button", 'aria-label': "Close"}
            %span{'aria-hidden': "true"} &times;
          %ul.nav.navbar-nav
            %li
              %a{href: "#"} Home
            %li
              %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Shop
              %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
                %li
                  %a.collapse-link{href: "#"} Mobile development
                %li
                  %a.collapse-link{href: "#"} Photo
                %li
                  %a.collapse-link{href: "#"} Web design
            %li
              %a{href: "#"} My account
        .hidden-xs
          %ul.nav.navbar-nav
            %li
              %a{href: "#"} Home
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Shop
              %ul.dropdown-menu
                %li
                  %a{href: "#"} Mobile development
                %li
                  %a{href: "#"} Photo
                %li
                  %a{href: "#"} Web design
                %li.divider{role: "separator"}
                %li
                  %a{href: "#"} Log out
            %li
              %a{href: "#"} My account
  %main.container


    #slider.carousel.slide{'data-ride': "carousel"}
      %ol.carousel-indicators
        %li.active{'data-target': "#slider", 'data-slide-to': "0"}
        %li{'data-target': "#slider", 'data-slide-to': "1"}
      .carousel-inner{role: "listbox"}
        .item.active
          = render partial: 'home/top'
        .item
          = render partial: 'home/top'
      %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
        %span.icon-prev{'aria-hidden': "true"}
        %span.sr-only Previous
      %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
        %span.icon-next{'aria-hidden': "true"}
        %span.sr-only Next


  .container
    .jumbotron.text-center.mb-0
      %h2.h1 Welcome to our amazing Bookstore!
      .mb-res-50
        %p We pore through hundreds of new books each month and select the five best we can find to share with our members.
      %button.btn.btn-default Get Started
    .mb-35
      %h3 Best Sellers
      .row
        - 4.times do
          = render partial: 'home/best_selers' 
  %footer.navbar-inverse
    .container
      .row
        .col-sm-9
          %ul.list-inline.general-align.mb-25
            %li
              %a.nav-link{href: "#"} Home
            %li
              %a.nav-link{href: "#"} Shop
            %li
              %a.nav-link{href: "#"} Orders
            %li
              %a.nav-link{href: "#"} Settings
        .col-sm-3
          %p.general-nav-mail support@bookstore.com
          %p.general-nav-number (555)-555-5555
          %ul.list-inline.general-align
            %li
              %a.nav-link{href: "#"}
                %i.fa.fa-facebook{'aria-hidden': "true"}
            %li
              %a.nav-link{href: "#"}
                %i.fa.fa-twitter{'aria-hidden': "true"}
            %li
              %a.nav-link{href: "#"}
                %i.fa.fa-google-plus{'aria-hidden': "true"}
            %li
              %a.nav-link{href: "#"}
                %i.fa.fa-instagram{'aria-hidden': "true"}

